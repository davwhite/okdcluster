; Zone file for pxeboot.local
$TTL 86400
@       IN      SOA     ns1.pxeboot.local. admin.pxeboot.local. (
                        2022022301      ; Serial
                        3600            ; Refresh
                        1800            ; Retry
                        604800          ; Expire
                        86400 )         ; Minimum TTL

        IN      NS      ns1.pxeboot.local.

ns1     IN      A       10.0.1.1
www     IN      A       10.0.1.10
tftp    IN      A       10.0.1.20    ; TFTP server IP address for PXE boot
dhcp    IN      A       10.0.1.30    ; DHCP server IP address for PXE boot
